---
interface Props {
  code: string;
  language?: string;
  filename?: string;
}

const { code, language = 'bash', filename } = Astro.props;
---

<section class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Quick Start</h2>
      <p class="text-gray-400">Get up and running in seconds.</p>
    </div>

    <div class="rounded-xl overflow-hidden border border-gray-800 bg-gray-900">
      {
        filename && (
          <div class="flex items-center gap-2 px-4 py-3 bg-gray-800/50 border-b border-gray-800">
            <div class="flex gap-1.5">
              <div class="w-3 h-3 rounded-full bg-red-500/80" />
              <div class="w-3 h-3 rounded-full bg-yellow-500/80" />
              <div class="w-3 h-3 rounded-full bg-green-500/80" />
            </div>
            <span class="text-gray-400 text-sm ml-2">{filename}</span>
          </div>
        )
      }
      <pre class="p-4 overflow-x-auto"><code class={`language-${language} text-sm text-gray-300`}>{code}</code></pre>
    </div>
  </div>
</section>
