---
import type { Props } from '@astrojs/starlight/props';

const { data } = Astro.props;
---

<div class="lander-wrapper">
<div class="lander">
  <section class="hero">
    <div class="hero-content">
      <div class="hero-badge">Open Source CLI</div>
      <h1 class="hero-title">All your AI assistants.<br/>One plugin system.</h1>
      <p class="hero-tagline">
        Write plugins once, sync to Claude Code, GitHub Copilot, Cursor, and 5+ other clients.
        Manage multi-repo workspaces with declarative configuration.
      </p>
      <div class="hero-actions">
        <a href="/getting-started/introduction/" class="button primary">
          Get Started
          <svg viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
            <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="https://github.com/EntityProcess/allagents" class="button secondary" target="_blank" rel="noopener">
          <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
            <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
          </svg>
          View on GitHub
        </a>
      </div>

      <div class="install-command">
        <span class="install-prompt">$</span>
        <code>npm install -g allagents</code>
        <button class="copy-button" data-copy="npm install -g allagents" title="Copy to clipboard">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
          </svg>
        </button>
      </div>
    </div>
  </section>

  <section class="architecture">
    <div class="section-header">
      <span class="section-label">Architecture</span>
      <h2 class="section-title">How AllAgents Works</h2>
      <p class="section-desc">A layered system from plugin registries to your development environment</p>
    </div>

    <div class="arch-flow">
      <!-- Layer 1: Marketplaces -->
      <div class="arch-tier">
        <div class="tier-header">
          <div class="tier-number">1</div>
          <div class="tier-info">
            <h3 class="tier-title">Marketplaces</h3>
            <p class="tier-desc">GitHub-based plugin registries</p>
          </div>
        </div>
        <div class="tier-content">
          <a href="https://github.com/anthropics/claude-plugins-official" class="node marketplace" target="_blank" rel="noopener">
            <div class="node-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20">
                <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path d="M9 22V12h6v10" />
              </svg>
            </div>
            <span class="node-label">claude-plugins-official</span>
          </a>
          <a href="https://github.com/obra/superpowers" class="node marketplace" target="_blank" rel="noopener">
            <div class="node-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20">
                <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path d="M9 22V12h6v10" />
              </svg>
            </div>
            <span class="node-label">obra/superpowers</span>
          </a>
          <div class="node marketplace dim">
            <div class="node-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20">
                <path d="M12 5v14M5 12h14" />
              </svg>
            </div>
            <span class="node-label">your-marketplace</span>
          </div>
        </div>
      </div>

      <!-- Connector -->
      <div class="arch-connector">
        <svg class="connector-svg" viewBox="0 0 24 40" fill="none">
          <path d="M12 0 L12 40" stroke="url(#connector-gradient)" stroke-width="2" stroke-dasharray="4 4">
            <animate attributeName="stroke-dashoffset" from="0" to="-16" dur="1s" repeatCount="indefinite" />
          </path>
          <defs>
            <linearGradient id="connector-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
              <stop offset="0%" stop-color="var(--color-accent)" stop-opacity="0.6" />
              <stop offset="100%" stop-color="var(--color-accent)" stop-opacity="0.2" />
            </linearGradient>
          </defs>
        </svg>
      </div>

      <!-- Layer 2: Plugins -->
      <div class="arch-tier">
        <div class="tier-header">
          <div class="tier-number">2</div>
          <div class="tier-info">
            <h3 class="tier-title">Plugins</h3>
            <p class="tier-desc">Packages containing AI tooling</p>
          </div>
        </div>
        <div class="tier-content plugins-grid">
          <a href="https://github.com/EveryInc/compound-engineering-plugin" class="node plugin featured" target="_blank" rel="noopener">
            <div class="node-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20">
                <path d="M12 2L2 7l10 5 10-5-10-5z" />
                <path d="M2 17l10 5 10-5M2 12l10 5 10-5" />
              </svg>
            </div>
            <span class="node-label">compound-engineering</span>
          </a>
          <a href="https://github.com/obra/superpowers" class="node plugin" target="_blank" rel="noopener">
            <div class="node-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20">
                <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" />
              </svg>
            </div>
            <span class="node-label">superpowers</span>
          </a>
          <a href="https://github.com/vercel-labs/agent-browser" class="node plugin" target="_blank" rel="noopener">
            <div class="node-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                <circle cx="12" cy="12" r="3" />
                <path d="M3 12h3M18 12h3M12 3v3M12 18v3" />
              </svg>
            </div>
            <span class="node-label">agent-browser</span>
          </a>
          <a href="https://github.com/anthropics/claude-plugins-official/tree/main/plugins/frontend-design" class="node plugin" target="_blank" rel="noopener">
            <div class="node-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                <circle cx="8.5" cy="8.5" r="1.5" />
                <path d="M21 15l-5-5L5 21" />
              </svg>
            </div>
            <span class="node-label">frontend-design</span>
          </a>
        </div>
      </div>

      <!-- Connector -->
      <div class="arch-connector">
        <svg class="connector-svg" viewBox="0 0 24 40" fill="none">
          <path d="M12 0 L12 40" stroke="url(#connector-gradient)" stroke-width="2" stroke-dasharray="4 4">
            <animate attributeName="stroke-dashoffset" from="0" to="-16" dur="1s" repeatCount="indefinite" />
          </path>
        </svg>
      </div>

      <!-- Layer 3: Plugin Contents -->
      <div class="arch-tier contents-tier">
        <div class="tier-header">
          <div class="tier-number">3</div>
          <div class="tier-info">
            <h3 class="tier-title">Plugin Contents</h3>
            <p class="tier-desc">Components that enhance your AI assistant</p>
          </div>
        </div>
        <div class="tier-content contents-grid">
          <div class="content-node">
            <div class="content-icon skills">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="18" height="18">
                <circle cx="12" cy="12" r="10" />
                <path d="M12 16v-4M12 8h.01" />
              </svg>
            </div>
            <span class="content-label">skills/</span>
            <span class="content-desc">Reusable prompts</span>
          </div>
          <div class="content-node">
            <div class="content-icon hooks">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="18" height="18">
                <path d="M10 13a5 5 0 007.54.54l3-3a5 5 0 00-7.07-7.07l-1.72 1.71" />
                <path d="M14 11a5 5 0 00-7.54-.54l-3 3a5 5 0 007.07 7.07l1.71-1.71" />
              </svg>
            </div>
            <span class="content-label">hooks/</span>
            <span class="content-desc">Event handlers</span>
          </div>
          <div class="content-node">
            <div class="content-icon agents">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="18" height="18">
                <circle cx="12" cy="8" r="5" />
                <path d="M20 21a8 8 0 10-16 0" />
              </svg>
            </div>
            <span class="content-label">agents/</span>
            <span class="content-desc">Specialized agents</span>
          </div>
          <div class="content-node">
            <div class="content-icon mcp">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="18" height="18">
                <path d="M12 2L2 7l10 5 10-5-10-5z" />
                <path d="M2 17l10 5 10-5M2 12l10 5 10-5" />
              </svg>
            </div>
            <span class="content-label">.mcp.json</span>
            <span class="content-desc">MCP servers</span>
          </div>
        </div>
      </div>

      <!-- Branch connector -->
      <div class="arch-branch">
        <svg class="branch-svg" viewBox="0 0 400 60" fill="none" preserveAspectRatio="xMidYMid meet">
          <path d="M200 0 L200 20 M200 20 Q200 30 120 30 L80 30 L80 60" stroke="url(#branch-gradient-left)" stroke-width="2" stroke-dasharray="4 4">
            <animate attributeName="stroke-dashoffset" from="0" to="-16" dur="1s" repeatCount="indefinite" />
          </path>
          <path d="M200 20 Q200 30 280 30 L320 30 L320 60" stroke="url(#branch-gradient-right)" stroke-width="2" stroke-dasharray="4 4">
            <animate attributeName="stroke-dashoffset" from="0" to="-16" dur="1s" repeatCount="indefinite" />
          </path>
          <defs>
            <linearGradient id="branch-gradient-left" x1="50%" y1="0%" x2="0%" y2="100%">
              <stop offset="0%" stop-color="var(--color-accent)" stop-opacity="0.5" />
              <stop offset="100%" stop-color="var(--color-success)" stop-opacity="0.5" />
            </linearGradient>
            <linearGradient id="branch-gradient-right" x1="50%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="var(--color-accent)" stop-opacity="0.5" />
              <stop offset="100%" stop-color="var(--color-pink)" stop-opacity="0.5" />
            </linearGradient>
          </defs>
        </svg>
      </div>

      <!-- Layer 4: Scopes -->
      <div class="arch-tier scopes-tier">
        <div class="scopes-grid">
          <div class="scope-card user-scope">
            <div class="scope-badge">User Scope</div>
            <code class="scope-path">~/.allagents/workspace.yaml</code>
            <p class="scope-desc">Plugins available across all your projects</p>
            <div class="scope-targets">
              <code>~/.claude/</code>
              <code>~/.codex/</code>
              <code>~/.cursor/</code>
            </div>
          </div>

          <div class="scope-card project-scope">
            <div class="scope-badge">Project Scope</div>
            <code class="scope-path">.allagents/workspace.yaml</code>
            <p class="scope-desc">Multi-repo workspace configuration</p>
            <div class="scope-repos">
              <div class="repo-row">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="14" height="14">
                  <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2v11z" />
                </svg>
                <span>frontend/</span>
              </div>
              <div class="repo-row">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="14" height="14">
                  <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2v11z" />
                </svg>
                <span>backend/</span>
              </div>
              <div class="repo-row">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="14" height="14">
                  <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2v11z" />
                </svg>
                <span>shared-lib/</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="features">
    <div class="section-header">
      <span class="section-label">Features</span>
      <h2 class="section-title">Everything you need</h2>
    </div>
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon-wrap">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="24" height="24">
            <path d="M12 2L2 7l10 5 10-5-10-5z" />
            <path d="M2 17l10 5 10-5M2 12l10 5 10-5" />
          </svg>
        </div>
        <h3>Multi-Client Support</h3>
        <p>Write plugins once, deploy to Claude Code, GitHub Copilot, Cursor, Codex, and 4 more clients.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon-wrap">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="24" height="24">
            <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
            <path d="M9 22V12h6v10" />
          </svg>
        </div>
        <h3>Plugin Marketplace</h3>
        <p>Share and discover plugins from community marketplaces hosted on GitHub.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon-wrap">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="24" height="24">
            <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2v11z" />
          </svg>
        </div>
        <h3>Multi-Repo Workspaces</h3>
        <p>Manage AI tooling across multiple repositories from a single workspace config.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon-wrap">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="24" height="24">
            <path d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </div>
        <h3>Declarative Sync</h3>
        <p>Define plugins in YAML, sync changes automatically across all clients.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon-wrap">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="24" height="24">
            <circle cx="12" cy="12" r="10" />
            <path d="M12 16v-4M12 8h.01" />
          </svg>
        </div>
        <h3>Skills & Commands</h3>
        <p>Package reusable skills and slash commands for your AI coding assistants.</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon-wrap">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="24" height="24">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0020 4.77 5.07 5.07 0 0019.91 1S18.73.65 16 2.48a13.38 13.38 0 00-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 005 4.77a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 009 18.13V22" />
          </svg>
        </div>
        <h3>Git-Friendly</h3>
        <p>Workspace configs are plain files - version control and share with your team.</p>
      </div>
    </div>
  </section>

  <section class="clients">
    <div class="section-header">
      <span class="section-label">Compatibility</span>
      <h2 class="section-title">Supported Clients</h2>
    </div>
    <div class="client-grid">
      <div class="client-item">Claude Code</div>
      <div class="client-item">GitHub Copilot</div>
      <div class="client-item">Cursor</div>
      <div class="client-item">Codex</div>
      <div class="client-item">OpenCode</div>
      <div class="client-item">Gemini CLI</div>
      <div class="client-item">Factory</div>
      <div class="client-item">Amp Code</div>
    </div>
  </section>
</div>
</div>

<script>
  document.querySelectorAll('.copy-button').forEach((button) => {
    button.addEventListener('click', async () => {
      const text = button.getAttribute('data-copy');
      if (text) {
        await navigator.clipboard.writeText(text);
        button.classList.add('copied');
        setTimeout(() => button.classList.remove('copied'), 2000);
      }
    });
  });
</script>

<style>
  .lander-wrapper {
    --color-accent: #6366f1;
    --color-accent-light: #818cf8;
    --color-success: #10b981;
    --color-pink: #ec4899;
    --color-cyan: #06b6d4;
    --color-amber: #f59e0b;
    --surface-1: rgba(255, 255, 255, 0.03);
    --surface-2: rgba(255, 255, 255, 0.05);
    --surface-3: rgba(255, 255, 255, 0.08);
    --border-subtle: rgba(255, 255, 255, 0.08);
    --border-default: rgba(255, 255, 255, 0.12);
    --text-primary: #f8fafc;
    --text-secondary: #94a3b8;
    --text-muted: #64748b;
    --bg-base: #0f1117;
    background: var(--bg-base);
    color: var(--text-primary);
    position: relative;
    margin: 0 calc(-50vw + 50%);
    padding: 0 calc(50vw - 50%);
    overflow: hidden;
  }

  /* Dark mode background with subtle glow */
  .lander-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: 900px;
    height: 700px;
    background: radial-gradient(ellipse at 50% 0%, rgba(99, 102, 241, 0.12) 0%, transparent 60%);
    pointer-events: none;
    z-index: 0;
  }

  .lander {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  /* Hero Section */
  .hero {
    text-align: center;
    padding: 4rem 0 2.5rem;
  }

  .hero-badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent-light);
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    padding: 0.35rem 0.75rem;
    border-radius: 100px;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-size: clamp(2rem, 6vw, 3.25rem);
    font-weight: 700;
    line-height: 1.15;
    margin: 0 0 1.25rem;
    letter-spacing: -0.02em;
    color: var(--text-primary);
  }

  .hero-tagline {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 560px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2.5rem;
  }

  .button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .button.primary {
    background: var(--color-accent);
    color: white;
  }

  .button.primary:hover {
    background: var(--color-accent-light);
    transform: translateY(-1px);
  }

  .button.secondary {
    background: var(--surface-2);
    color: var(--text-secondary);
    border: 1px solid var(--border-default);
  }

  .button.secondary:hover {
    background: var(--surface-3);
    border-color: rgba(255, 255, 255, 0.18);
  }

  .install-command {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--surface-1);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    padding: 0.625rem 1rem;
    font-family: var(--sl-font-mono);
    font-size: 0.875rem;
  }

  .install-prompt {
    color: var(--text-muted);
  }

  .install-command code {
    background: none;
    padding: 0;
    color: var(--text-secondary);
  }

  .copy-button {
    background: none;
    border: none;
    color: var(--text-muted);
    cursor: pointer;
    padding: 0.25rem;
    display: flex;
    transition: color 0.15s;
    margin-left: 0.25rem;
  }

  .copy-button:hover { color: var(--text-primary); }
  .copy-button.copied { color: var(--color-success); }

  /* Section Headers */
  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
